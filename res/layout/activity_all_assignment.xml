<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AllAssignmentActivity" >

        <ScrollView
        android:id="@+id/scrollAllAssignment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:id="@+id/tableAllAssignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableAllAssignment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textViewAllAssignment"
                    android:text="All Assignment"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FF00FF" />
            </TableRow>
              <TableRow
                android:id="@+id/tableAllAssignmentRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >       

            <Button
                android:id="@+id/buttonShowAllAssignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/yellobtn"
                android:padding="20dp"
                android:text="Show All Assignment" />
   
            </TableRow>
            
             <TableRow
                android:id="@+id/tableAllAssignmentRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                 <TextView
                     android:id="@+id/textView1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="20dp"
                     android:text="" />
            </TableRow>
        </TableLayout>
    </ScrollView>
    
</RelativeLayout>
